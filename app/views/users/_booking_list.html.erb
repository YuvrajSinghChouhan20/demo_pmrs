<div class="container-fluid px-4 " id="listing-container">
  <% if bookings.any?%>
    <div class="table-responsive rounded-4 mx-4">
    <table class="table align-middle mb-0 rounded-4 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Booking Id</th>
          <th>Property Id</th>
          <th>Booking For</th>
          <th>Booking Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.each do |booking|%>
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <div class="ms-3">
                  <p class="fw-bold mb-1"><%= booking.id %></p>
                </div>
              </div>
            </td>
            <td>
              <p class="fw-normal mb-1"><%= booking.property.id%></p>
            </td>
            <td><%= booking.booking_for%></td>
            <td><%= booking.booking_status.capitalize %></td>
            <td>
              <button type="button" class="btn btn-link btn-sm btn-rounded">
                Cancel
              </button>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  <% else %>
    <div class="row">
      <h1 class="text-center">
        No Bookings Yet
      </h1>
    </div>
  <%end%>
</div>
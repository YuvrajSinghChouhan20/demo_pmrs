<div class="container mt-5 p-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Log in</h1>
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "form row g-3") do |form| %>
        <div class="col-md-12">
          <%= form.label :email, class: "form-label" %><br />
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
        </div>

        <div class="col-md-12">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="col-md-12">
            <%= form.check_box :remember_me, class: "form-check-input" %>
            <%= form.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="col-md-12 mb-3">
          <%= form.submit "Log in", class: "btn btn-lg btn-dark" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% @properties.each do |property| %>
  <div class="col-lg-4 col-md-6 " data-wow-delay="0.1s">
    <div class="property-item shadow-sm pb- rounded overflow-hidden property-card ">
        <div class="position-relative overflow-hidden">
            <a href="">
              <%= image_tag property.images.first, alt: "", height: "250", class: 'w-100'%>
            </a>
            <div class="bg-dark rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3"><%= property.listed_for %></div>
            <div class="bg-dark rounded-top text-white position-absolute start-0 bottom-0 mx-4 pt-1 px-3"><%= property.sub_property_type.capitalize %></div>
        </div>
        <div class="p-4 pb-0">
            <h5 class="text-dark mb-2 fs-5"> <b>$12,345</b></h5>
            <%= link_to property.property_name, "#", class: "d-block h5 mb-2" %>
            <p><i class="fa fa-map-marker-alt text-dark me-2"></i>
              <%= property.address %>, <%= property.city %>, <%= property.state%>
            </p>
        </div>
        <div class="d-flex border-top p-4">
            <%=link_to "Book now", "#", class:"btn btn-dark btn-lg px-4 shadow" %>
        </div>
    </div>
  </div>
<% end %>
<div class="container">
  <div class="row mt-5">
    <h1>Post Porperties</h1>

    <%= form_with(model: @property, url: "/properties", class: "row g-3") do |form| %>
      <div class="col-md-12">
        <p class="mb-2">You are looking to...</p>

        <%= form.radio_button :listed_for, 'Rent', type: "radio", class: "form-check btn-check", autocomplete: "off", checked: true  %>
        <%= form.label :listed_for, class: "btn btn-outline-dark btn-sm px-3 mx-1 rounded-5", for: "property_listed_for_rent", value: "Rent"  %>

        <%= form.radio_button :listed_for, 'Sale', type: "radio", class: "form-check btn-check", autocomplete: "off" %>
        <%= form.label :listed_for, class: "btn btn-outline-dark btn-sm px-3 mx-1 rounded-5", for: "property_listed_for_sale", value: "Sell"  %>

      </div>

      <div class="col-md-12">
        <p class="mb-2">Property Type</p>

        <div class="form-check form-check-inline">

          <%= form.radio_button :property_type, 'residential', type: "radio", class: "form-check-input", checked: true  %>
          <%= form.label :residential, class: "form-check-label", for: "property_property_type_residential", value: "residential"  %>

        </div>
        <div class="form-check form-check-inline">
          <%= form.radio_button :property_type, 'commercial', type: "radio", class: "form-check-input" %>
          <%= form.label :commercial, class: "form-check-label", for: "property_property_type_commercial", value: "commercial"  %>
        </div>

        <div class="sub_residential_property_type my-3">
          <%= form.radio_button :sub_property_type, 'flat', type: "radio", class: "form-check btn-check", autocomplete: "off", required: true %>
          <%= form.label :sub_property_type, class: "btn btn-outline-dark btn-sm px-3 mx-1 rounded-5", for: "property_sub_property_type_flat", value: "flat/Appartment"  %>

          <%= form.radio_button :sub_property_type, 'plot', type: "radio", class: "form-check btn-check", autocomplete: "off", required: true %>
          <%= form.label :sub_property_type, class: "btn btn-outline-dark btn-sm px-3 mx-1 rounded-5", for: "property_sub_property_type_plot", value: "plot/land"  %>

          <%= form.radio_button :sub_property_type, 'house', type: "radio", class: "form-check btn-check", autocomplete: "off", required: true %>
          <%= form.label :sub_property_type, class: "btn btn-outline-dark btn-sm px-3 mx-1 rounded-5", for: "property_sub_property_type_house", value: "house/villa"  %>
        </div>
      </div>

      <div class="col-md-6">
        <%= form.label :property_name, class: 'form-label' %>
        <%= form.text_field :property_name, autocomplete: "property_name", class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= form.label :property_size, class: 'form-label' %>
        <%= form.number_field :property_size, autocomplete: "size", class: "form-control", min: 1 %>
      </div>

      <div class="col-md-12">
        <%= form.label :address, class: 'form-label' %>
        <%= form.text_area :address, autocomplete: "address", class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= form.label :city, class: 'form-label' %>
        <%= form.text_field :city, autocomplete: "city", class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= form.label :state, class: "form-label"%>
        <%= form.select :state, %w[ Delhi Maharashtra Madhya-Pradesh Rajasthan ], {}, class: "form-select" %>
      </div>

      <div class="col-md-2">
        <%= form.label :zipcode, class: "form-label"%>
        <%= form.number_field :zipcode, autofocus: true, autocomplete: "zip", class: "form-control" %>
      </div>


      <div class="col-md-6">
        <%= form.label :images, class: "form-label" %>
        <%= form.file_field :images, multiple: "multiple", autocomplete: "new-password", class: "form-control" %>
      </div>



      <div class="col-12 my-3">
        <%= form.submit "Submit", class: "btn btn-lg btn-dark" %>
      </div>

    <% end %>
  </div>
</div>


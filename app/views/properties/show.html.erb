<div class="container mt-5 mb-2">
  <div class="row my-md-5">
    <div class="property-image col-md-6 rounded-4">
      <%= image_tag @property.images.first, alt: "Property Image", class: "image-responsive w-100 rounded-2 shadow" %>
    </div>
    <div class="property-info col-md-6 px-3 py-3">
      <div class="row px-4">
        <h2 class="fs-2"><%= @property.property_name %></h2>
        <p><small><%= @property.sub_property_type.capitalize %> for <%= @property.listed_for%></small></p>
      </div>
      <div class="row px-4">
        <div class="col-md-6">
          <small class="fs-5"><%= @property.listed_for%>:</small>
          <p><%= @property.price%></p>
          <small class="fs-5">Available For :</small>
          <p><strong><%= @property.listed_for%></strong></p>
          <small class="fs-5">Size :</small>
          <p><%= @property.property_size%> Sq/ft</p>
        </div>
        <div class="col-md-6">
          <small class="fs-5">Area : </small>
          <p><%= @property.address %> </p>
          <small class="fs-5">Status : </small>
          <p><%= @property.status %> </p>
          <small class="fs-5">Address : </small>
          <p><%= @property.address %>, <%= @property.city%> </p>
        </div>
        <%= button_to "Book Property", "#{property_path}/bookings", method: :post, class: "btn btn-lg btn-dark "%>
      </div>
    </div>
  </div>
  <div class="row about-property text-secondary">
    <h3><strong>About Property</strong></h3>
    <p>Address : <%= "#{@property.address},#{@property.city}" %></p>
    <p><%= @property.property_about%></p>
  </div>
</div>
<div class="container-fluid bg-light ">
  <div class="container py-1">
    <div class="reviews row my-md-5  px-1">
      <div class=" d-flex justify-content-between align-item-center">
        <h2 class="my-4 d-inline">Reviews & Ratings</h2>
        <%= link_to "View All", property_reviews_path(@property), class: "btn btn-outline-dark my-4" %>
      </div>
      <div class="col-md-3 ratings shadow text-center py-3 rounded-4 bg-white">
        <h2>Ratings</h2>
        <div class="row">
            <span><strong class="fs-2"><%= @property.average_ratings%></strong>/ <strong class="text-secondary">5</strong> </span>
          <span>
            Average Ratings
          </span>
          <span>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
          </span>
          <small class="text-secondary text-opacity-75">( <%= @property.total_reviews%> Total reviews)</small>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="d-flex align-items-center">
            <div class="progress w-75 mx-2 my-3 rounded-3">
              <div class="progress-bar  bg-dark " role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <span>5 <small ><i class="fa-regular fa-star"></i></small></span>
          </div>
          <div class="d-flex align-items-center">
            <div class="progress w-75 mx-2 my-3 rounded-3">
              <div class="progress-bar  bg-dark" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <span>4 <i class="fa-regular fa-star"></i></span>
          </div>
          <div class="d-flex align-items-center">
            <div class="progress w-75 mx-2 my-3 rounded-3">
              <div class="progress-bar  bg-dark " role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <span>3 <i class="fa-regular fa-star"></i></span>
          </div>
          <div class="d-flex align-items-center">
            <div class="progress w-75 mx-2 my-3 rounded-3">
              <div class="progress-bar  bg-dark" style="width:<%= @property.reviews.count %>px" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="1000000000000000"></div>
            </div>
            <span>2 <i class="fa-regular fa-star"></i></span>
          </div>
          <div class="d-flex align-items-center">
            <div class="progress w-75 mx-2 my-3 rounded-3">
              <div class="progress-bar  bg-dark" style="width:<%= @property.count_one_star %>px" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <span>1 <i class="fa-regular fa-star"></i></span>
          </div>
        </div>
      </div>

      <div class="col-md-8 reviews mx-1  ">
        <div class="row px-3">
          <h3><strong>Reviews</strong></h3>
        </div>
        <% if @property.reviews.any? %>
          <% @property.recent_reviews.each do |review| %>
            <div class="row px-5 py-2 pt-3 border-bottom mx-1 my-1 bg-white rounded-4 shadow">
              <span>
                <p class="d-flex align-items-center">
                  <span class="me-2">
                    <strong><%= review.user.full_name%></strong>
                  </span>
                  <span class="me-2">
                    <small class="badge text-bg-dark px-2"><%= review.ratings%> <i class="fa-regular fa-star"></i></small>
                  </span>
                </p>
              </span>
              <p><%= review.title %></p>
              <p class="text-dark text-opacity-75"><%= review.description %></p>
            </div>
          <%end%>
        <%else%>
          <h1 class="text-center">No Reviews Yet!</h1>
        <%end%>
      </div>
    </div>
  </div>
</div>
